<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.tracyogata.project1.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Disaster Report"
            android:textColor="#fafafa"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingTop="12dp"
            android:gravity="center"
            android:background="#d50000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Contact Info:"
            android:textColor="#000"
            android:textSize="18dp"
            android:paddingTop="12dp" />

        <EditText
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/phone_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Are you safe?"
            android:textColor="#000"
            android:textSize="18dp"
            android:paddingTop="12dp" />

        <CheckBox
            android:id="@+id/yes_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Yes."
            android:textSize="16dp" />

        <CheckBox
            android:id="@+id/no_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "No. Medical attention required."
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Photo"
            android:textSize="18dp"
            android:textColor="#000"
            android:paddingTop="12dp" />

        <ImageView
            android:id="@+id/Image_Field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Take Photo"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:onClick="TakePhoto"
            android:backgroundTint="#bdbdbd"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Location:"
            android:textColor="#000"
            android:textSize="18dp"
            android:paddingTop="12dp"/>

        <TextView
            android:id="@+id/latitude_longtitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Get Location"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:id="@+id/location_button"
            android:onClick="GetLocation"
            android:backgroundTint="#bdbdbd"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18dp"
            android:paddingTop="12dp"
            android:text="Optional Message:"/>

        <EditText
            android:id="@+id/long_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint = "e.g. Medical Condition Description"
            android:textSize = "16dp"
            android:inputType="textMultiLine"/>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Submit"
            android:textSize = "18dp"
            android:onClick="SubmitButton"
            android:backgroundTint="#bdbdbd"/>

    </LinearLayout>
</ScrollView>

